[Unit]
Description=Private Discord bot
After=systemd-networkd.target

[Service]
WorkingDirectory=/home/mikolaj/bots/180bot
ExecStart=/usr/bin/sh /home/mikolaj/bots/180bot/run.sh
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=180bot
User=mikolaj

[Install]
WantedBy=multi-user.target
